<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.campustribune">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LaunchActivity"
            android:theme="@style/AppTheme.WithActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.campustribune.login.LoginActivity" android:theme="@style/AppTheme.Dark" />
        <activity android:name="com.campustribune.login.SignupActivity" android:theme="@style/AppTheme.Dark" />
        <activity android:name="com.campustribune.frontpage.FrontPageActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name="com.campustribune.userProfile.UserProfileActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name="com.campustribune.BaseActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name="com.campustribune.post.activity.CreatePostActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name="com.campustribune.post.activity.ViewPostActivity" android:theme="@style/AppTheme.Dark"/>
    </application>

</manifest>
