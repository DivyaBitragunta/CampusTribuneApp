<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:alpha="0.2"/>

    <TextView
        android:id="@+id/textview_username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/textview_userid"
        android:inputType="text"
        android:layout_width="250dp"
        android:layout_below="@+id/textview_username"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textview_email"
        android:inputType="textEmailAddress"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/textview_userid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/textview_university"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/textview_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/switch_recommendations"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Allow recommendation emails"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textOn="Yes"
        android:textOff="No"
        android:layout_below="@+id/textview_university"
        android:layout_marginTop="16dp"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/switch_notifications"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Allow notifications"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textOn="Yes"
        android:textOff="No"
        android:layout_below="@+id/switch_recommendations"
        android:layout_marginTop="16dp"/>

    <GridLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_below="@+id/switch_notifications">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_category1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_add_white_18dp"
        android:text="@string/category1"
        android:layout_centerHorizontal="true"
        android:layout_row="0"
        android:layout_column="0"
        android:padding="12dp"
        android:background="@android:color/transparent"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_category2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_add_white_18dp"
        android:text="@string/category2"
        android:layout_centerHorizontal="true"
        android:layout_row="0"
        android:layout_column="1"
        android:padding="12dp"
        android:background="@android:color/transparent"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_category3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_add_white_18dp"
        android:text="@string/category3"
        android:layout_centerHorizontal="true"
        android:layout_row="1"
        android:layout_column="0"
        android:padding="12dp"
        android:background="@android:color/transparent"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_category4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_add_white_18dp"
        android:text="@string/category4"
        android:layout_centerHorizontal="true"
        android:layout_row="1"
        android:layout_column="1"
        android:padding="12dp"
        android:background="@android:color/transparent"
        />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_category5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_add_white_18dp"
            android:text="@string/category5"
            android:layout_centerHorizontal="true"
            android:layout_row="2"
            android:layout_column="0"
            android:padding="12dp"
            android:background="@android:color/transparent"
            />
    </GridLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:text="Update"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>


