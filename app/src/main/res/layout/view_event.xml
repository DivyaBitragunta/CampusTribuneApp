<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/each_event_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@color/gradientStartColor"
        android:textColor="@color/colorPrimaryDark"
        android:text="JUL 15-JUL 17"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/each_event_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/each_event_date"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/each_event_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/each_event_date"
        android:textSize="15dp"
        android:text="San Jose State Final Sports at City Center"/>

    <TextView
        android:id="@+id/each_event_location"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/each_event_title"
        android:layout_toRightOf="@+id/each_event_image"
        android:textSize="12dp"
        android:text="at San Jose City Center"/>

    <TextView
        android:id="@+id/each_event_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/each_event_location"
        android:layout_toRightOf="@+id/each_event_image"
        android:textSize="12dp"
        android:text="10:00AM - 8:00PM"/>


</RelativeLayout>